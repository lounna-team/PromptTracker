<!DOCTYPE html>
<html>
<head>
  <title>PromptTracker - LLM Prompt Management & Analytics</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Google Fonts - JetBrains Mono -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

  <%= stylesheet_link_tag "prompt_tracker/application", media: "all" %>



  <%= yield :head %>

  <!-- Chart.js Theme Configuration -->
  <script>
    // Theme Management
    (function() {
      // Get saved theme or default to light
      const savedTheme = localStorage.getItem('pt-theme') || 'light';
      document.documentElement.setAttribute('data-theme', savedTheme);
    })();

    // Set Chart.js defaults to match PromptTracker design system
    document.addEventListener('DOMContentLoaded', function() {
      // Theme Toggle
      const themeToggle = document.getElementById('themeToggle');
      const themeIcon = document.getElementById('themeIcon');
      const currentTheme = document.documentElement.getAttribute('data-theme');

      // Set initial icon
      if (currentTheme === 'dark') {
        themeIcon.className = 'bi bi-moon-fill';
      } else {
        themeIcon.className = 'bi bi-sun-fill';
      }

      // Toggle theme
      themeToggle.addEventListener('click', function() {
        const theme = document.documentElement.getAttribute('data-theme');
        const newTheme = theme === 'dark' ? 'light' : 'dark';

        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('pt-theme', newTheme);

        // Update icon
        if (newTheme === 'dark') {
          themeIcon.className = 'bi bi-moon-fill';
        } else {
          themeIcon.className = 'bi bi-sun-fill';
        }

        // Update Chart.js if present
        updateChartTheme(newTheme);
      });

      // Chart.js configuration
      if (typeof Chart !== 'undefined') {
        updateChartTheme(currentTheme);

        // Custom color palette
        window.ptChartColors = {
          primary: '#007BFF',      // electric blue
          success: '#00D97E',      // neon green
          warning: '#FFC107',
          danger: '#DC3545',
          info: '#17A2B8',
          gray: '#6B7280'
        };
      }

      function updateChartTheme(theme) {
        if (typeof Chart === 'undefined') return;

        if (theme === 'dark') {
          Chart.defaults.color = '#E5E7EB';
          Chart.defaults.borderColor = 'rgba(0, 123, 255, 0.2)';
        } else {
          Chart.defaults.color = '#212529';
          Chart.defaults.borderColor = '#DEE2E6';
        }
        Chart.defaults.backgroundColor = 'rgba(0, 123, 255, 0.1)';
        Chart.defaults.font.family = "'JetBrains Mono', 'Courier New', monospace";
        Chart.defaults.font.size = 12;
      }
    });
  </script>
</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark pt-navbar">
    <div class="container-fluid">
      <%= link_to main_app.prompt_tracker_path, class: "navbar-brand pt-brand" do %>
        <span class="pt-logo-cursor">&gt;</span>
        <span class="pt-logo-prompt">Prompt</span><span class="pt-logo-tracker">Tracker</span>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Prompts", prompts_path, class: "nav-link #{'active' if controller_name == 'prompts'}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Responses", llm_responses_path, class: "nav-link #{'active' if controller_name == 'llm_responses'}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Evaluations", evaluations_path, class: "nav-link #{'active' if controller_name == 'evaluations'}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Analytics", analytics_root_path, class: "nav-link #{'active' if controller_path.start_with?('analytics')}" %>
          </li>
        </ul>

        <!-- Search form -->
        <form class="d-flex" role="search" action="<%= prompts_path %>" method="get">
          <input class="form-control me-2" type="search" name="q" placeholder="Search prompts..." value="<%= params[:q] %>">
          <button class="btn btn-outline-primary" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </form>

        <!-- Theme Toggle -->
        <button class="theme-toggle ms-3" id="themeToggle" title="Toggle theme">
          <i class="bi bi-sun-fill" id="themeIcon"></i>
        </button>
      </div>
    </div>
  </nav>

  <!-- Breadcrumbs -->
  <% if content_for?(:breadcrumbs) %>
    <div class="container-fluid mt-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Home", main_app.prompt_tracker_path %>
          </li>
          <%= yield :breadcrumbs %>
        </ol>
      </nav>
    </div>
  <% end %>

  <!-- Flash messages -->
  <div class="container-fluid mt-3">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
  </div>

  <!-- Main content -->
  <div class="container-fluid main-content">
    <%= yield %>
  </div>

  <!-- Footer -->
  <footer class="pt-footer">
    <div class="container-fluid">
      <div class="row align-items-center">
        <div class="col-md-6">
          <p class="mb-0">
            <span class="pt-footer-brand">
              <span class="pt-logo-prompt">Prompt</span><span class="pt-logo-tracker">Tracker</span>
            </span>
            <span class="pt-footer-tagline">Developer tool meets analytics lab</span>
          </p>
        </div>
        <div class="col-md-6 text-end">
          <div class="pt-footer-stats">
            <span class="pt-stat">
              <i class="bi bi-file-text"></i> <%= PromptTracker::Prompt.count %> prompts
            </span>
            <span class="pt-stat">
              <i class="bi bi-layers"></i> <%= PromptTracker::PromptVersion.count %> versions
            </span>
            <span class="pt-stat">
              <i class="bi bi-chat-dots"></i> <%= PromptTracker::LlmResponse.count %> responses
            </span>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
