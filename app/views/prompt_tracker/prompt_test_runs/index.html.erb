<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item active">Test Runs</li>
<% end %>

<div class="row mb-4">
  <div class="col">
    <h1>
      <i class="bi bi-play-circle"></i> Test Runs
    </h1>
    <p class="text-muted">History of all test executions</p>
  </div>
</div>

<!-- Filters -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: request.path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-4">
        <%= label_tag :status, "Status", class: "form-label" %>
        <%= select_tag :status, 
                       options_for_select([
                         ["All Statuses", ""],
                         ["Pending", "pending"],
                         ["Running", "running"],
                         ["Completed", "completed"],
                         ["Failed", "failed"]
                       ], params[:status]), 
                       class: "form-select" %>
      </div>
      <div class="col-md-4">
        <%= label_tag :passed, "Result", class: "form-label" %>
        <%= select_tag :passed, 
                       options_for_select([
                         ["All Results", ""],
                         ["Passed", "true"],
                         ["Failed", "false"]
                       ], params[:passed]), 
                       class: "form-select" %>
      </div>
      <div class="col-md-4 d-flex align-items-end">
        <%= submit_tag "Filter", class: "btn btn-primary me-2" %>
        <%= link_to "Clear", request.path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Test Runs List -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">All Test Runs</h5>
  </div>
  <div class="card-body">
    <% if @test_runs.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Test</th>
              <th>Version</th>
              <th>Status</th>
              <th>Result</th>
              <th>Duration</th>
              <th>Run At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @test_runs.each do |run| %>
              <tr>
                <td>
                  <strong><%= run.prompt_test.name %></strong>
                </td>
                <td>
                  <%= link_to "v#{run.prompt_version.version_number}", 
                              testing_prompt_prompt_version_path(run.prompt_version.prompt, run.prompt_version) %>
                </td>
                <td>
                  <% case run.status %>
                  <% when "pending" %>
                    <span class="badge bg-secondary">Pending</span>
                  <% when "running" %>
                    <span class="badge bg-primary">Running</span>
                  <% when "completed" %>
                    <span class="badge bg-success">Completed</span>
                  <% when "failed" %>
                    <span class="badge bg-danger">Failed</span>
                  <% end %>
                </td>
                <td>
                  <% if run.passed? %>
                    <span class="badge bg-success">✓ Passed</span>
                  <% elsif run.passed == false %>
                    <span class="badge bg-danger">✗ Failed</span>
                  <% else %>
                    <span class="badge bg-secondary">-</span>
                  <% end %>
                </td>
                <td>
                  <% if run.duration_ms %>
                    <%= number_with_delimiter(run.duration_ms) %>ms
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td>
                  <%= time_ago_in_words(run.created_at) %> ago
                </td>
                <td>
                  <%= link_to "View", prompt_test_run_path(run), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @test_runs.respond_to?(:total_pages) && @test_runs.total_pages > 1 %>
        <div class="mt-3">
          <%= paginate @test_runs %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-play-circle" style="font-size: 4rem; color: #ccc;"></i>
        <p class="text-muted mt-3">No test runs found.</p>
        <% if params[:status].present? || params[:passed].present? %>
          <p class="text-muted">Try adjusting your filters.</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

