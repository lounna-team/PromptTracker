<%# Enhanced evaluation breakdown scorecard showing multiple evaluations %>
<% if @response.evaluations.any? %>
  <div class="card mb-4">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="bi bi-check2-square"></i> Evaluation Results
        </h5>
        <div>
          <span class="badge bg-secondary"><%= @response.evaluations.count %> evaluation(s)</span>
        </div>
      </div>
    </div>
    <div class="card-body">
      <!-- Overall Score -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card bg-light">
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-md-3 text-center">
                  <div style="font-size: 3rem; font-weight: bold;">
                    <%= @response.overall_score.round(1) %>
                    <small style="font-size: 1.5rem; color: #6c757d;">/100</small>
                  </div>
                  <div class="text-muted">Overall Score</div>
                </div>
                <div class="col-md-6">
                  <div class="progress" style="height: 30px;">
                    <% score = @response.overall_score %>
                    <% color = score >= 80 ? 'success' : (score >= 60 ? 'warning' : 'danger') %>
                    <div class="progress-bar bg-<%= color %>" role="progressbar"
                         style="width: <%= score %>%"
                         aria-valuenow="<%= score %>"
                         aria-valuemin="0" aria-valuemax="100">
                      <%= score.round(1) %>%
                    </div>
                  </div>
                  <small class="text-muted mt-1 d-block">
                    Strategy: <strong><%= @prompt.score_aggregation_strategy&.titleize || "Weighted Average" %></strong>
                  </small>
                </div>
                <div class="col-md-3 text-center">
                  <% if @response.passes_threshold?(80) %>
                    <span class="badge bg-success" style="font-size: 1rem; padding: 0.5rem 1rem;">
                      <i class="bi bi-check-circle"></i> Passes Quality Check
                    </span>
                  <% elsif @response.passes_threshold?(60) %>
                    <span class="badge bg-warning" style="font-size: 1rem; padding: 0.5rem 1rem;">
                      <i class="bi bi-exclamation-triangle"></i> Needs Review
                    </span>
                  <% else %>
                    <span class="badge bg-danger" style="font-size: 1rem; padding: 0.5rem 1rem;">
                      <i class="bi bi-x-circle"></i> Below Standard
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Individual Evaluations -->
      <h6 class="mb-3">Individual Evaluations</h6>
      <div class="row">
        <% @response.evaluation_breakdown.each do |eval_data| %>
          <div class="col-md-6 mb-3">
            <div class="card h-100 <%= eval_data[:score] >= 80 ? 'border-success' : (eval_data[:score] >= 60 ? 'border-warning' : 'border-danger') %>">
              <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= eval_data[:evaluator_name] %></strong>
                  <br>
                  <small class="text-muted">
                    <%= eval_data[:evaluator_type].titleize %>
                    <% if eval_data[:evaluator_id] %>
                      â€¢ <%= eval_data[:evaluator_id] %>
                    <% end %>
                  </small>
                </div>
                <div class="text-end">
                  <div style="font-size: 1.5rem; font-weight: bold;">
                    <%= eval_data[:score].round(1) %>
                    <small style="font-size: 1rem; color: #6c757d;">/100</small>
                  </div>
                  <% if @prompt.score_aggregation_strategy == "weighted_average" && eval_data[:normalized_weight] %>
                    <small class="text-muted">
                      Weight: <%= (eval_data[:normalized_weight] * 100).round(1) %>%
                    </small>
                  <% end %>
                </div>
              </div>
              <div class="card-body">
                <!-- Score Progress Bar -->
                <div class="progress mb-3" style="height: 20px;">
                  <% score = eval_data[:score] %>
                  <% color = score >= 80 ? 'success' : (score >= 60 ? 'warning' : 'danger') %>
                  <div class="progress-bar bg-<%= color %>" role="progressbar"
                       style="width: <%= score %>%"
                       aria-valuenow="<%= score %>"
                       aria-valuemin="0" aria-valuemax="100">
                    <%= score.round(1) %>%
                  </div>
                </div>

                <!-- Feedback -->
                <% if eval_data[:feedback].present? %>
                  <div class="alert alert-light mb-2">
                    <small><%= eval_data[:feedback] %></small>
                  </div>
                <% end %>

                <!-- Criteria Scores -->
                <% if eval_data[:criteria_scores].present? && eval_data[:criteria_scores].any? %>
                  <div class="mt-2">
                    <small class="text-muted d-block mb-1"><strong>Criteria Breakdown:</strong></small>
                    <% eval_data[:criteria_scores].each do |criterion, criterion_score| %>
                      <div class="d-flex justify-content-between align-items-center mb-1">
                        <small><%= criterion.to_s.titleize %></small>
                        <div class="d-flex align-items-center">
                          <div class="progress me-2" style="width: 100px; height: 15px;">
                            <% crit_color = criterion_score >= 80 ? 'success' : (criterion_score >= 60 ? 'warning' : 'danger') %>
                            <div class="progress-bar bg-<%= crit_color %>" role="progressbar"
                                 style="width: <%= criterion_score %>%"
                                 aria-valuenow="<%= criterion_score %>"
                                 aria-valuemin="0" aria-valuemax="100">
                            </div>
                          </div>
                          <small class="text-muted" style="min-width: 40px;"><%= criterion_score.round(1) %></small>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <!-- Timestamp -->
                <div class="mt-2">
                  <small class="text-muted">
                    <i class="bi bi-clock"></i> <%= format_relative_time(eval_data[:created_at]) %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Weakest/Strongest Areas -->
      <% if @response.evaluations.count > 1 %>
        <div class="row mt-3">
          <div class="col-md-6">
            <div class="alert alert-danger">
              <strong><i class="bi bi-arrow-down-circle"></i> Weakest Area:</strong>
              <%= @response.weakest_evaluation&.evaluator_id&.titleize || "N/A" %>
              <span class="float-end"><%= @response.weakest_evaluation&.score&.round(1) || "N/A" %>/100</span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="alert alert-success">
              <strong><i class="bi bi-arrow-up-circle"></i> Strongest Area:</strong>
              <%= @response.strongest_evaluation&.evaluator_id&.titleize || "N/A" %>
              <span class="float-end"><%= @response.strongest_evaluation&.score&.round(1) || "N/A" %>/100</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="card mb-4">
    <div class="card-body text-center text-muted py-5">
      <i class="bi bi-check2-square" style="font-size: 3rem;"></i>
      <p class="mt-3">No evaluations yet for this response.</p>
      <% if @prompt.evaluator_configs.enabled.any? %>
        <p class="text-muted">
          <i class="bi bi-info-circle"></i>
          This prompt has <%= @prompt.evaluator_configs.enabled.count %> evaluator(s) configured.
          Evaluations should run automatically for new responses.
        </p>
      <% else %>
        <p class="text-muted">
          <i class="bi bi-info-circle"></i>
          No evaluators configured for this prompt.
          <%= link_to "Configure evaluators", prompt_path(@prompt) %> to enable auto-evaluation.
        </p>
      <% end %>
    </div>
  </div>
<% end %>

