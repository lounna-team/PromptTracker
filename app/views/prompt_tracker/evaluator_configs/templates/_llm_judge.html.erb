<%# Display template for LLM Judge Evaluator configuration %>
<% config ||= {} %>

<div class="evaluator-display">
  <h6 class="mb-2">
    <i class="bi bi-robot"></i>
    LLM Judge
  </h6>

  <% judge_model = config['judge_model'] || config[:judge_model] %>
  <% custom_instructions = config['custom_instructions'] || config[:custom_instructions] %>

  <% if judge_model.present? %>
    <div class="mb-2">
      <strong>Judge Model:</strong>
      <div class="mt-1">
        <span class="badge bg-info-subtle text-info">
          <%= judge_model %>
        </span>
      </div>
    </div>
  <% end %>

  <% if custom_instructions.present? %>
    <div class="mb-2">
      <strong>Evaluation Instructions:</strong>
      <div class="mt-1 p-2 bg-light rounded">
        <%= simple_format(custom_instructions) %>
      </div>
    </div>
  <% else %>
    <p class="text-muted mb-0">No custom instructions configured</p>
  <% end %>
</div>
