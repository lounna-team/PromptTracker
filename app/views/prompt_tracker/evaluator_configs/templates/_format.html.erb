<%# Display template for Format Evaluator configuration %>
<% config ||= {} %>

<div class="evaluator-display">
  <h6 class="mb-2">
    <i class="bi bi-file-earmark-code"></i>
    Format Validator
  </h6>
  
  <% format_type = config['format'] || config[:format] %>
  
  <% if format_type.present? %>
    <div class="mb-2">
      <strong>Expected Format:</strong>
      <div class="mt-1">
        <span class="badge bg-primary"><%= format_type.to_s.upcase %></span>
      </div>
    </div>
    
    <div class="text-muted small">
      <i class="bi bi-info-circle"></i>
      Response must be valid <%= format_type.to_s.upcase %> format
    </div>
  <% else %>
    <p class="text-muted mb-0">No format specified</p>
  <% end %>
</div>

