<%# Display template for Exact Match Evaluator configuration %>
<% config ||= {} %>

<div class="evaluator-display">
  <h6 class="mb-2">
    <i class="bi bi-check2-square"></i>
    Exact Match
  </h6>
  
  <% expected_text = config['expected_text'] || config[:expected_text] %>
  <% case_sensitive = config['case_sensitive'] || config[:case_sensitive] || false %>
  <% ignore_whitespace = config['ignore_whitespace'] || config[:ignore_whitespace] || false %>
  
  <% if expected_text.present? %>
    <div class="mb-2">
      <strong>Expected Text:</strong>
      <div class="mt-1 p-2 bg-light rounded">
        <code><%= expected_text %></code>
      </div>
    </div>
    
    <div class="text-muted small">
      <% options = [] %>
      <% options << "case sensitive" if case_sensitive %>
      <% options << "ignore whitespace" if ignore_whitespace %>
      <% if options.any? %>
        <i class="bi bi-info-circle"></i> <%= options.join(", ").capitalize %>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mb-0">No expected text configured</p>
  <% end %>
</div>

