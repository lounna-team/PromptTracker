            </div>
          </div>

          <!-- Loop Example -->
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#example4">
                Loops (Liquid)
              </button>
            </h2>
            <div id="example4" class="accordion-collapse collapse" data-bs-parent="#examplesAccordion">
              <div class="accordion-body">
                <pre class="bg-light p-3 rounded mb-2"><code>Order Summary for {{ customer_name }}:

{% for item in items %}
- {{ item }}
{% endfor %}

Total items: {{ items.size }}</code></pre>
                <p class="mb-2"><strong>Variables:</strong> <code>customer_name</code>, <code>items</code> (array)</p>
                <button class="btn btn-sm btn-primary use-example-btn" data-template="Order Summary for {{ customer_name }}:&#10;&#10;{% for item in items %}&#10;- {{ item }}&#10;{% endfor %}&#10;&#10;Total items: {{ items.size }}">
                  Use This Template
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="<%= asset_path 'prompt_tracker/playground.js' %>"></script>

<%= javascript_tag do %>
  document.addEventListener('DOMContentLoaded', function() {
    const playground = new PromptPlayground({
      <% if @prompt_version %>
        promptId: <%= @prompt.id %>,
        versionId: <%= @prompt_version.id %>,
        versionHasResponses: <%= @prompt_version.has_responses? %>,
        previewUrl: '<%= preview_prompt_prompt_version_playground_path(@prompt, @prompt_version) %>',
        saveUrl: '<%= save_prompt_prompt_version_playground_path(@prompt, @prompt_version) %>',
        isStandalone: false
      <% elsif @prompt %>
        promptId: <%= @prompt.id %>,
        <% if @version %>
          versionId: <%= @version.id %>,
          versionHasResponses: <%= @version.has_responses? %>,
        <% end %>
        previewUrl: '<%= preview_prompt_playground_path(@prompt) %>',
        saveUrl: '<%= save_prompt_playground_path(@prompt) %>',
        isStandalone: false
      <% else %>
        promptId: null,
        previewUrl: '<%= preview_playground_path %>',
        saveUrl: '<%= save_playground_path %>',
        isStandalone: true
      <% end %>
    });
  });
<% end %>
