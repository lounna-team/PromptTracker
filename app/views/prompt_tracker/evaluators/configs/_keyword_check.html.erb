<%# Configuration form for Keyword Evaluator %>

<div class="alert alert-info mb-3">
  <i class="bi bi-search"></i>
  <strong>Keyword Checker</strong>
  <p class="mb-0 mt-1">Checks for required and forbidden keywords in the response.</p>
</div>

<!-- Required Keywords -->
<div class="mb-3">
  <label class="form-label">Required Keywords</label>
  <textarea name="config[required_keywords]" 
            class="form-control" 
            rows="3"
            placeholder="Enter keywords, one per line"></textarea>
  <small class="form-text text-muted">
    Keywords that must be present in the response. Enter one per line.
  </small>
</div>

<!-- Forbidden Keywords -->
<div class="mb-3">
  <label class="form-label">Forbidden Keywords</label>
  <textarea name="config[forbidden_keywords]" 
            class="form-control" 
            rows="3"
            placeholder="Enter keywords, one per line"></textarea>
  <small class="form-text text-muted">
    Keywords that must NOT be present in the response. Enter one per line.
  </small>
</div>

<!-- Case Sensitive -->
<div class="mb-3 form-check">
  <input type="checkbox" 
         name="config[case_sensitive]" 
         class="form-check-input" 
         id="keyword_case_sensitive"
         value="true">
  <label class="form-check-label" for="keyword_case_sensitive">
    Case-sensitive matching
  </label>
  <div class="form-text">
    If checked, "Hello" and "hello" will be treated as different keywords.
  </div>
</div>

<div class="alert alert-secondary">
  <strong>Scoring:</strong>
  <ul class="mb-0 mt-2">
    <li>All required keywords present + no forbidden keywords: <strong>100 points</strong></li>
    <li>Some required keywords missing: <strong>Proportional score</strong></li>
    <li>Any forbidden keyword present: <strong>0 points</strong></li>
  </ul>
</div>

