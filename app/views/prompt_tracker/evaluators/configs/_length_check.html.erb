<%# Configuration form for Length Evaluator %>

<div class="alert alert-info mb-3">
  <i class="bi bi-rulers"></i>
  <strong>Length Validator</strong>
  <p class="mb-0 mt-1">Validates response length against min/max and ideal ranges.</p>
</div>

<div class="row">
  <!-- Min Length -->
  <div class="col-md-6 mb-3">
    <label class="form-label">Minimum Length (characters)</label>
    <input type="number" 
           name="config[min_length]" 
           class="form-control" 
           value="10" 
           min="0"
           required>
    <small class="form-text text-muted">Responses shorter than this will score poorly</small>
  </div>

  <!-- Max Length -->
  <div class="col-md-6 mb-3">
    <label class="form-label">Maximum Length (characters)</label>
    <input type="number" 
           name="config[max_length]" 
           class="form-control" 
           value="2000" 
           min="0"
           required>
    <small class="form-text text-muted">Responses longer than this will score poorly</small>
  </div>
</div>

<div class="row">
  <!-- Ideal Min -->
  <div class="col-md-6 mb-3">
    <label class="form-label">Ideal Minimum (characters)</label>
    <input type="number" 
           name="config[ideal_min]" 
           class="form-control" 
           value="50" 
           min="0"
           required>
    <small class="form-text text-muted">Ideal minimum for best score</small>
  </div>

  <!-- Ideal Max -->
  <div class="col-md-6 mb-3">
    <label class="form-label">Ideal Maximum (characters)</label>
    <input type="number" 
           name="config[ideal_max]" 
           class="form-control" 
           value="500" 
           min="0"
           required>
    <small class="form-text text-muted">Ideal maximum for best score</small>
  </div>
</div>

<div class="alert alert-secondary">
  <strong>Scoring:</strong>
  <ul class="mb-0 mt-2">
    <li>Responses within ideal range: <strong>100 points</strong></li>
    <li>Responses between min/ideal or ideal/max: <strong>50-100 points</strong></li>
    <li>Responses outside min/max: <strong>20-30 points</strong></li>
  </ul>
</div>

