<%# Form template for Length Validator %>

<div class="alert alert-info mb-3">
  <i class="bi bi-rulers"></i>
  <strong>Length Validator</strong>
  <p class="mb-0 mt-1">Evaluates response length against specified criteria.</p>
</div>

<!-- Hidden fields for evaluator type -->
<input type="hidden" name="evaluation[evaluator_type]" value="automated">
<input type="hidden" name="evaluation[evaluator_id]" value="length_check">

<!-- Configuration Inputs -->
<div class="row mb-3">
  <div class="col-md-6">
    <label class="form-label">Minimum Length (characters)</label>
    <input type="number" 
           name="length_check[min_length]" 
           class="form-control" 
           value="0"
           min="0"
           placeholder="0">
    <small class="form-text text-muted">Responses shorter than this will score lower</small>
  </div>
  <div class="col-md-6">
    <label class="form-label">Maximum Length (characters)</label>
    <input type="number" 
           name="length_check[max_length]" 
           class="form-control" 
           value="10000"
           min="0"
           placeholder="10000">
    <small class="form-text text-muted">Responses longer than this will score lower</small>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-6">
    <label class="form-label">Ideal Minimum (characters)</label>
    <input type="number" 
           name="length_check[ideal_min]" 
           class="form-control" 
           value="50"
           min="0"
           placeholder="50">
    <small class="form-text text-muted">Ideal minimum length for best score</small>
  </div>
  <div class="col-md-6">
    <label class="form-label">Ideal Maximum (characters)</label>
    <input type="number" 
           name="length_check[ideal_max]" 
           class="form-control" 
           value="500"
           min="0"
           placeholder="500">
    <small class="form-text text-muted">Ideal maximum length for best score</small>
  </div>
</div>

<div class="alert alert-secondary">
  <i class="bi bi-lightning-charge"></i>
  <strong>Automatic Scoring</strong>
  <p class="mb-0">
    The evaluator will automatically score the response based on how well its length fits within your specified ranges.
    Responses within the ideal range get 100%, outside the min/max range get 0%, and in between are scored proportionally.
  </p>
</div>

