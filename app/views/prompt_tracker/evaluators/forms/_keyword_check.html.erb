<%# Form template for Keyword Checker %>

<div class="alert alert-info mb-3">
  <i class="bi bi-search"></i>
  <strong>Keyword Checker</strong>
  <p class="mb-0 mt-1">Checks for required and forbidden keywords in the response.</p>
</div>

<!-- Hidden fields for evaluator type -->
<input type="hidden" name="evaluation[evaluator_type]" value="automated">
<input type="hidden" name="evaluation[evaluator_id]" value="keyword_check">

<!-- Configuration Inputs -->
<div class="mb-3">
  <label class="form-label">Required Keywords</label>
  <textarea name="keyword_check[required_keywords]" 
            class="form-control" 
            rows="4"
            placeholder="Enter one keyword per line&#10;example&#10;important&#10;required"></textarea>
  <small class="form-text text-muted">
    Enter one keyword per line. The response must contain these keywords to score well.
  </small>
</div>

<div class="mb-3">
  <label class="form-label">Forbidden Keywords</label>
  <textarea name="keyword_check[forbidden_keywords]" 
            class="form-control" 
            rows="4"
            placeholder="Enter one keyword per line&#10;error&#10;failed&#10;unavailable"></textarea>
  <small class="form-text text-muted">
    Enter one keyword per line. The response will score lower if it contains these keywords.
  </small>
</div>

<div class="mb-3">
  <div class="form-check">
    <input type="checkbox" 
           name="keyword_check[case_sensitive]" 
           class="form-check-input" 
           id="case_sensitive"
           value="true">
    <label class="form-check-label" for="case_sensitive">
      Case Sensitive
    </label>
    <small class="form-text text-muted d-block">
      If checked, "Example" and "example" will be treated as different keywords.
    </small>
  </div>
</div>

<div class="alert alert-secondary">
  <i class="bi bi-lightning-charge"></i>
  <strong>Automatic Scoring</strong>
  <p class="mb-0">
    The evaluator will automatically score based on:
  </p>
  <ul class="mb-0 mt-2">
    <li>100% if all required keywords are present and no forbidden keywords are found</li>
    <li>Proportional score based on percentage of required keywords found</li>
    <li>Penalty for each forbidden keyword found</li>
  </ul>
</div>

