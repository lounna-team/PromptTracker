<% content_for :breadcrumbs do %>
  <li class="breadcrumb-item"><%= link_to "Prompts", prompts_path %></li>
  <li class="breadcrumb-item active"><%= @prompt.name %></li>
<% end %>

<div class="row mb-4">
  <div class="col">
    <h1>
      <i class="bi bi-file-text"></i> <%= @prompt.name %>
      <% if @prompt.archived_at.present? %>
        <span class="badge bg-dark">Archived</span>
      <% end %>
    </h1>
    <p class="text-muted"><%= @prompt.description %></p>
  </div>
  <div class="col-auto">
    <%= link_to prompt_playground_path(@prompt), class: "btn btn-primary me-2" do %>
      <i class="bi bi-play-circle"></i> Open in Playground
    <% end %>
    <% if @prompt.active_version || @prompt.latest_version %>
      <%= link_to prompt_prompt_version_prompt_tests_path(@prompt, @prompt.active_version || @prompt.latest_version), class: "btn btn-outline-primary me-2" do %>
        <i class="bi bi-check2-square"></i> Tests
      <% end %>
    <% end %>
    <%= link_to new_prompt_ab_test_path(@prompt), class: "btn btn-success me-2" do %>
      <i class="bi bi-graph-up-arrow"></i> Create A/B Test
    <% end %>
    <%= link_to analytics_prompt_path(@prompt), class: "btn btn-info" do %>
      <i class="bi bi-graph-up"></i> Analytics
    <% end %>
  </div>
</div>

<!-- Metadata -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card metric-card">
      <div class="metric-value"><%= @prompt.prompt_versions.count %></div>
      <div class="metric-label">Versions</div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card metric-card">
      <div class="metric-value"><%= format_tokens(@prompt.total_llm_calls) %></div>
      <div class="metric-label">Total Calls</div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card metric-card">
      <div class="metric-value"><%= format_cost(@prompt.total_cost_usd) %></div>
      <div class="metric-label">Total Cost</div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card metric-card">
      <div class="metric-value"><%= format_duration(@prompt.average_response_time_ms) %></div>
      <div class="metric-label">Avg Response Time</div>
    </div>
  </div>
</div>

<!-- Details -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Details</h5>
      </div>
      <div class="card-body">
        <table class="table table-sm">
          <tbody>
            <tr>
              <th style="width: 40%;">Name</th>
              <td><code><%= @prompt.name %></code></td>
            </tr>
            <tr>
              <th>Created</th>
              <td><%= format_timestamp(@prompt.created_at) %></td>
            </tr>
            <tr>
              <th>Updated</th>
              <td><%= format_timestamp(@prompt.updated_at) %></td>
            </tr>
            <% if @prompt.archived_at.present? %>
              <tr>
                <th>Archived</th>
                <td><%= format_timestamp(@prompt.archived_at) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Active Version</h5>
      </div>
      <div class="card-body">
        <% if @active_version %>
          <table class="table table-sm">
            <tbody>
              <tr>
                <th style="width: 40%;">Version</th>
                <td>
                  <%= link_to "v#{@active_version.version_number}", prompt_prompt_version_path(@prompt, @active_version) %>
                  <%= status_badge(@active_version.status) %>
                </td>
              </tr>
              <tr>
                <th>Source</th>
                <td><%= source_badge(@active_version.source) %></td>
              </tr>
              <tr>
                <th>Created</th>
                <td><%= format_timestamp(@active_version.created_at) %></td>
              </tr>
              <tr>
                <th>Calls</th>
                <td><%= format_tokens(@active_version.llm_responses.count) %></td>
              </tr>
              <tr>
                <th>Cost</th>
                <td><%= format_cost(@active_version.total_cost_usd) %></td>
              </tr>
              <tr>
                <th>Avg Response Time</th>
                <td><%= format_duration(@active_version.average_response_time_ms) %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "View Version Details", prompt_prompt_version_path(@prompt, @active_version), class: "btn btn-sm btn-primary" %>
        <% else %>
          <p class="text-muted">No active version</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Versions List -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">All Versions</h5>
    <span class="badge bg-secondary"><%= @versions.count %></span>
  </div>
  <div class="card-body">
    <% if @versions.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Version</th>
              <th>Status</th>
              <th>Source</th>
              <th>Created</th>
              <th class="text-end">Calls</th>
              <th class="text-end">Cost</th>
              <th class="text-end">Avg Time</th>
              <th class="text-end">Avg Score</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @versions.each do |version| %>
              <tr class="<%= 'table-primary' if version == @active_version %>">
                <td>
                  <strong>v<%= version.version_number %></strong>
                  <% if version == @active_version %>
                    <span class="badge bg-success ms-2">Active</span>
                  <% end %>
                  <% if version == @latest_version && version != @active_version %>
                    <span class="badge bg-info ms-2">Latest</span>
                  <% end %>
                </td>
                <td><%= status_badge(version.status) %></td>
                <td><%= source_badge(version.source) %></td>
                <td><%= format_timestamp(version.created_at) %></td>
                <td class="text-end"><%= format_tokens(version.llm_responses.count) %></td>
                <td class="text-end"><%= format_cost(version.total_cost_usd) %></td>
                <td class="text-end"><%= format_duration(version.average_response_time_ms) %></td>
                <td class="text-end">
                  <% if version.evaluations.any? %>
                    <% avg_score = PromptTracker::EvaluationHelpers.average_score_for_version(version) rescue nil %>
                    <%= score_badge(avg_score) if avg_score %>
                  <% else %>
                    <span class="text-muted">N/A</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <%= link_to "View", prompt_prompt_version_path(@prompt, version), class: "btn btn-sm btn-outline-primary" %>
                    <%= link_to "Tests", prompt_prompt_version_prompt_tests_path(@prompt, version), class: "btn btn-sm btn-outline-secondary", title: "View Tests" %>
                    <% unless version.active? %>
                      <%= button_to "Activate", activate_prompt_prompt_version_path(@prompt, version), method: :post, class: "btn btn-sm btn-outline-success", title: "Activate", data: { confirm: "Activate this version? This will deprecate all other versions." } %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">No versions yet</p>
    <% end %>
  </div>
</div>
