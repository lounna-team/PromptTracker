<div class="tests-dashboard">
  <div class="page-header" style="background-color: #EBF5FF; border-left: 4px solid #2563EB; padding: 1.5rem; margin-bottom: 2rem;">
    <h1 style="color: #1E40AF; margin: 0;">
      ðŸ§ª Tests Dashboard
    </h1>
    <p style="color: #1E40AF; margin: 0.5rem 0 0 0;">
      Pre-deployment validation and quality assurance
    </p>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
    <div class="stat-card" style="background: white; border: 2px solid #DBEAFE; border-radius: 8px; padding: 1.5rem;">
      <div style="color: #64748B; font-size: 0.875rem; margin-bottom: 0.5rem;">Total Tests</div>
      <div style="color: #2563EB; font-size: 2rem; font-weight: bold;"><%= @total_tests %></div>
    </div>

    <div class="stat-card" style="background: white; border: 2px solid #DBEAFE; border-radius: 8px; padding: 1.5rem;">
      <div style="color: #64748B; font-size: 0.875rem; margin-bottom: 0.5rem;">Runs Today</div>
      <div style="color: #2563EB; font-size: 2rem; font-weight: bold;"><%= @total_runs_today %></div>
    </div>

    <div class="stat-card" style="background: white; border: 2px solid #DBEAFE; border-radius: 8px; padding: 1.5rem;">
      <div style="color: #64748B; font-size: 0.875rem; margin-bottom: 0.5rem;">Pass Rate (Last 100)</div>
      <div style="color: <%= @pass_rate >= 80 ? '#10B981' : '#EF4444' %>; font-size: 2rem; font-weight: bold;">
        <%= @pass_rate %>%
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div style="margin-bottom: 2rem;">
    <%= link_to "View Test Runs", tests_runs_path, class: "btn btn-primary", style: "background-color: #2563EB; color: white; padding: 0.75rem 1.5rem; border-radius: 6px; text-decoration: none; display: inline-block;" %>
  </div>

  <!-- Recent Test Runs -->
  <div style="background: white; border: 2px solid #DBEAFE; border-radius: 8px; padding: 1.5rem; margin-bottom: 2rem;">
    <h2 style="color: #1E40AF; margin-top: 0;">Recent Test Runs</h2>

    <% if @recent_test_runs.any? %>
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="border-bottom: 2px solid #DBEAFE;">
            <th style="text-align: left; padding: 0.75rem; color: #64748B;">Test</th>
            <th style="text-align: left; padding: 0.75rem; color: #64748B;">Status</th>
            <th style="text-align: left; padding: 0.75rem; color: #64748B;">Run At</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_test_runs.each do |run| %>
            <tr style="border-bottom: 1px solid #F1F5F9;">
              <td style="padding: 0.75rem;">
                <%= link_to run.prompt_test.name, tests_run_path(run), style: "color: #2563EB; text-decoration: none;" %>
              </td>
              <td style="padding: 0.75rem;">
                <span style="padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.875rem; background-color: <%= run.status == 'passed' ? '#D1FAE5' : '#FEE2E2' %>; color: <%= run.status == 'passed' ? '#065F46' : '#991B1B' %>;">
                  <%= run.status %>
                </span>
              </td>
              <td style="padding: 0.75rem; color: #64748B;"><%= time_ago_in_words(run.created_at) %> ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p style="color: #64748B;">No test runs yet.</p>
    <% end %>
  </div>

</div>
