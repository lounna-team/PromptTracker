<% content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Prompts", testing_prompts_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Evaluations</li>
    </ol>
  </nav>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="bi bi-clipboard-check"></i> Evaluations</h1>
    <p class="text-muted">Browse and filter all LLM response evaluations</p>
  </div>
</div>

<!-- Summary Stats -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-clipboard-check"></i> Total Evaluations</h6>
        <h3 class="mb-0"><%= format_tokens(@evaluations.total_count) %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-star"></i> Avg Score</h6>
        <h3 class="mb-0"><%= @avg_score.round(1) %>%</h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-trophy"></i> High Quality</h6>
        <h3 class="mb-0"><%= @high_quality_count %></h3>
        <small class="text-muted">Scores ≥ 80%</small>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-exclamation-triangle"></i> Low Quality</h6>
        <h3 class="mb-0"><%= @low_quality_count %></h3>
        <small class="text-muted">Scores < 50%</small>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="card mb-4">
  <div class="card-body">
    <%= form_with url: evaluations_path, method: :get, class: "row g-3" do |f| %>
      <div class="col-md-3">
        <%= f.label :evaluator_type, "Evaluator Type", class: "form-label" %>
        <%= f.select :evaluator_type,
                     options_for_select([["All Types", ""]] + @evaluator_types.map { |t| [t.titleize, t] }, params[:evaluator_type]),
                     {},
                     class: "form-select" %>
      </div>

      <div class="col-md-3">
        <%= f.label :min_score, "Min Score (%)", class: "form-label" %>
        <%= f.number_field :min_score,
                          value: params[:min_score],
                          min: 0,
                          max: 100,
                          step: 1,
                          class: "form-control",
                          placeholder: "0" %>
      </div>

      <div class="col-md-3">
        <%= f.label :max_score, "Max Score (%)", class: "form-label" %>
        <%= f.number_field :max_score,
                          value: params[:max_score],
                          min: 0,
                          max: 100,
                          step: 1,
                          class: "form-control",
                          placeholder: "100" %>
      </div>

      <div class="col-md-3">
        <%= f.label :sort, "Sort By", class: "form-label" %>
        <%= f.select :sort,
                     options_for_select([
                       ["Newest First", "newest"],
                       ["Oldest First", "oldest"],
                       ["Highest Score", "highest_score"],
                       ["Lowest Score", "lowest_score"]
                     ], params[:sort] || "newest"),
                     {},
                     class: "form-select" %>
      </div>

      <div class="col-12">
        <%= f.submit "Apply Filters", class: "btn btn-primary" %>
        <%= link_to "Clear Filters", evaluations_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Evaluations Table -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="bi bi-list"></i>
      Evaluations
      <span class="badge bg-secondary"><%= @evaluations.total_count %></span>
    </h5>
  </div>
  <div class="card-body">
    <% if @evaluations.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Response</th>
              <th>Prompt</th>
              <th>Type</th>
              <th>Evaluator</th>
              <th class="text-end">Score</th>
              <th>Feedback</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @evaluations.each do |evaluation| %>
              <% response = evaluation.llm_response %>
              <% prompt = response.prompt_version.prompt %>
              <% normalized_score = PromptTracker::EvaluationHelpers.normalize_score(
                   evaluation.score,
                   min: evaluation.score_min,
                   max: evaluation.score_max
                 ) * 100 %>
              <tr>
                <td><code>#<%= evaluation.id %></code></td>
                <td>
                  <code>#<%= response.id %></code>
                </td>
                <td>
                  <%= link_to prompt.name, testing_prompt_path(prompt) %>
                  <br>
                  <small class="text-muted">v<%= response.prompt_version.version_number %></small>
                </td>
                <td>
                  <span class="badge bg-secondary"><%= evaluation.evaluator_name %></span>
                </td>
                <td>
                  <code class="text-muted small"><%= evaluation.evaluator_type %></code>
                </td>
                <td class="text-end">
                  <%= score_badge(normalized_score) %>
                  <br>
                  <small class="text-muted">
                    <%= evaluation.score %>
                    <% if evaluation.score_min != 0 || evaluation.score_max != 100 %>
                      (<%= evaluation.score_min %>-<%= evaluation.score_max %>)
                    <% end %>
                  </small>
                </td>
                <td>
                  <% if evaluation.feedback.present? %>
                    <%= truncate(evaluation.feedback, length: 50) %>
                  <% else %>
                    <span class="text-muted">—</span>
                  <% end %>
                </td>
                <td><%= format_relative_time(evaluation.created_at) %></td>
                <td>
                  <%= link_to evaluation_path(evaluation), class: "btn btn-sm btn-outline-primary" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @evaluations %>
      </div>
    <% else %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-clipboard-check" style="font-size: 4rem;"></i>
        <h4 class="mt-3">No Evaluations Found</h4>
        <% if params[:evaluator_type].present? || params[:min_score].present? || params[:max_score].present? %>
          <p>Try adjusting your filters</p>
          <%= link_to "Clear Filters", evaluations_path, class: "btn btn-outline-primary" %>
        <% else %>
          <p>No evaluations have been created yet</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
