<div class="card mb-4">
  <div class="card-header bg-light">
    <h5 class="mb-0" style="color: #374151;">
      <i class="bi bi-search"></i>
      Keyword Check
    </h5>
  </div>
  <div class="card-body">
    <% config = evaluation.metadata['config'] || {} %>
    <% required = config['required_keywords'] || [] %>
    <% forbidden = config['forbidden_keywords'] || [] %>
    <% case_sensitive = config['case_sensitive'] %>

    <div class="row">
      <div class="col-md-6">
        <% if required.any? %>
          <h6><i class="bi bi-check-circle"></i> Required Keywords</h6>
          <ul class="list-group mb-3">
            <% required.each do |keyword| %>
              <li class="list-group-item">
                <code><%= keyword %></code>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted"><em>No required keywords configured</em></p>
        <% end %>
      </div>

      <div class="col-md-6">
        <% if forbidden.any? %>
          <h6><i class="bi bi-x-circle"></i> Forbidden Keywords</h6>
          <ul class="list-group mb-3">
            <% forbidden.each do |keyword| %>
              <li class="list-group-item">
                <code><%= keyword %></code>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted"><em>No forbidden keywords configured</em></p>
        <% end %>
      </div>
    </div>

    <div class="alert alert-secondary mb-0">
      <strong>Case Sensitivity:</strong> <%= case_sensitive ? 'Enabled' : 'Disabled' %>
    </div>

    <% if evaluation.feedback.present? %>
      <div class="alert <%= evaluation.passed? ? 'alert-success' : 'alert-warning' %> mt-3 mb-0">
        <strong>Result:</strong> <%= evaluation.feedback %>
      </div>
    <% end %>
  </div>
</div>
