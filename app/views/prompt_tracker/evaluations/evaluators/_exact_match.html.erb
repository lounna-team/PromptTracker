<div class="card mb-4">
  <div class="card-header bg-light">
    <h5 class="mb-0" style="color: #374151;">
      <i class="bi bi-check2-square"></i>
      Exact Match Evaluation
    </h5>
  </div>
  <div class="card-body">
    <% config = evaluation.metadata['config'] || {} %>
    <% expected_text = config['expected_text'] || '' %>
    <% case_sensitive = config['case_sensitive'] %>
    <% trim_whitespace = config['trim_whitespace'] %>

    <div class="row mb-3">
      <div class="col-md-6">
        <div class="alert alert-secondary mb-0">
          <strong>Case Sensitivity:</strong> <%= case_sensitive ? 'Enabled' : 'Disabled' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="alert alert-secondary mb-0">
          <strong>Trim Whitespace:</strong> <%= trim_whitespace ? 'Yes' : 'No' %>
        </div>
      </div>
    </div>

    <% if expected_text.present? %>
      <h6><i class="bi bi-file-text"></i> Expected Text</h6>
      <div class="bg-light p-3 rounded mb-3" style="max-height: 200px; overflow-y: auto;">
        <pre class="mb-0"><%= expected_text %></pre>
      </div>
    <% end %>

    <% if evaluation.feedback.present? %>
      <div class="alert <%= evaluation.passed? ? 'alert-success' : 'alert-warning' %> mb-0">
        <strong>Result:</strong> <%= simple_format(evaluation.feedback) %>
      </div>
    <% end %>
  </div>
</div>
