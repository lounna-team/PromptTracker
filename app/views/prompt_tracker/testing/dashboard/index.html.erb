<div class="tests-dashboard">
  <!-- Header with Create Button -->
  <div class="row mb-4">
    <div class="col">
      <h1>
        <i class="bi bi-check2-square"></i> Testing Dashboard
      </h1>
      <p class="text-muted">Manage prompts, versions, and test results</p>
    </div>
    <div class="col-auto">
      <%= link_to testing_playground_path, class: "btn btn-primary" do %>
        <i class="bi bi-play-circle"></i> Create Prompt in Playground
      <% end %>
    </div>
  </div>

  <!-- Prompts Accordion -->
  <%= render "prompt_tracker/shared/prompts_accordion", prompts: @prompts, show_monitor_button: false, search_enabled: false %>
</div>
