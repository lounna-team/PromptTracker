<div class="dropdown">
  <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="bi bi-eye"></i> Columns
  </button>
  <ul class="dropdown-menu dropdown-menu-end p-3" style="min-width: 250px;" onclick="event.stopPropagation();">
    <li class="mb-2">
      <strong class="dropdown-header px-0">Show/Hide Columns</strong>
    </li>
    <li><hr class="dropdown-divider"></li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-name" data-column-visibility-target="checkbox" data-column-name="name" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-name">Test Name</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-template" data-column-visibility-target="checkbox" data-column-name="template" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-template">Template</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-variables" data-column-visibility-target="checkbox" data-column-name="variables" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-variables">Variables</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-evaluator-configs" data-column-visibility-target="checkbox" data-column-name="evaluator_configs" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-evaluator-configs">Evaluator Configs</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-status" data-column-visibility-target="checkbox" data-column-name="status" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-status">Last Status</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-last-run" data-column-visibility-target="checkbox" data-column-name="last_run" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-last-run">Last Run</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-total-runs" data-column-visibility-target="checkbox" data-column-name="total_runs" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-total-runs">Total Runs</label>
    </li>
    <li class="form-check mb-2">
      <input class="form-check-input" type="checkbox" id="col-actions" data-column-visibility-target="checkbox" data-column-name="actions" data-action="change->column-visibility#toggle" checked>
      <label class="form-check-label" for="col-actions">Actions</label>
    </li>
    <li><hr class="dropdown-divider"></li>
    <li class="d-flex gap-2">
      <button class="btn btn-sm btn-outline-primary flex-fill" data-action="click->column-visibility#showAll">Show All</button>
      <button class="btn btn-sm btn-outline-secondary flex-fill" data-action="click->column-visibility#hideAll">Hide All</button>
    </li>
  </ul>
</div>

