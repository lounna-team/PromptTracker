<div class="card metric-card" id="test_status_card">
  <div class="metric-value">
    <% if test.last_run %>
      <% case test.last_run.status %>
      <% when 'running' %>
        <span class="text-warning">
          <span class="spinner-border spinner-border-sm me-1"></span>Running
        </span>
      <% when 'passed' %>
        <span class="text-success">✓ Passing</span>
      <% when 'failed' %>
        <span class="text-danger">✗ Failing</span>
      <% when 'error' %>
        <span class="text-danger">✗ Error</span>
      <% else %>
        <span class="text-muted">Unknown</span>
      <% end %>
    <% else %>
      <span class="text-muted">Not Run</span>
    <% end %>
  </div>
  <div class="metric-label">
    Status
    <i class="bi bi-info-circle text-muted"
       data-bs-toggle="tooltip"
       data-bs-placement="top"
       title="Shows the status of the most recent test run. Updates in real-time when tests are running."></i>
  </div>
</div>
