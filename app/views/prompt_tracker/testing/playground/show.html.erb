<div class="container-fluid mt-4"
     data-controller="playground"
     <% if @prompt_version %>
       data-playground-prompt-id-value="<%= @prompt.id %>"
       data-playground-version-id-value="<%= @prompt_version.id %>"
       data-playground-version-has-responses-value="<%= @prompt_version.has_responses? %>"
       data-playground-preview-url-value="<%= preview_testing_prompt_prompt_version_playground_path(@prompt, @prompt_version) %>"
       data-playground-save-url-value="<%= save_testing_prompt_prompt_version_playground_path(@prompt, @prompt_version) %>"
       data-playground-is-standalone-value="false"
     <% elsif @prompt %>
       data-playground-prompt-id-value="<%= @prompt.id %>"
       <% if @version %>
         data-playground-version-id-value="<%= @version.id %>"
         data-playground-version-has-responses-value="<%= @version.has_responses? %>"
       <% end %>
       data-playground-preview-url-value="<%= preview_testing_prompt_playground_path(@prompt) %>"
       data-playground-save-url-value="<%= save_testing_prompt_playground_path(@prompt) %>"
       data-playground-is-standalone-value="false"
     <% else %>
       data-playground-preview-url-value="<%= preview_testing_playground_path %>"
       data-playground-save-url-value="<%= save_testing_playground_path %>"
       data-playground-is-standalone-value="true"
     <% end %>
>
  <div class="row mb-3">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Testing", testing_root_path %></li>
          <li class="breadcrumb-item active" aria-current="page">Playground</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <h1>
        <i class="bi bi-play-circle"></i>
        <% if @prompt %>
          Playground: <%= @prompt.name %>
          <% if @version %>
            <span class="badge bg-primary">v<%= @version.version_number %></span>
          <% end %>
        <% else %>
          Prompt Playground
        <% end %>
      </h1>
      <p class="text-muted">
        <% if @prompt_version %>
          Testing specific version <%= @version.version_number %> of <%= @prompt.name %>.
        <% elsif @prompt %>
          Editing <%= @prompt.name %> (using <%= @version ? "v#{@version.version_number}" : "no version" %>).
        <% else %>
          Draft and test your prompt template with live preview.
        <% end %>
        Supports Liquid template syntax with <code>{{ variable }}</code> and <code>{{ variable | filter }}</code>.
      </p>
    </div>
    <div class="col-auto">
      <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#keyboardShortcutsModal">
        <i class="bi bi-keyboard"></i> Keyboard Shortcuts
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#templateExamplesModal">
        <i class="bi bi-lightbulb"></i> Examples
      </button>
    </div>
  </div>

  <!-- Alert for messages -->
  <div id="playground-alert"
       class="alert alert-dismissible fade"
       role="alert"
       style="display: none;"
       data-playground-target="alertContainer">
    <span id="playground-alert-message" data-playground-target="alertMessage"></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

  <!-- Split pane layout -->
  <div class="row">
    <!-- Left pane: Prompt editors -->
    <div class="col-lg-6 mb-4">
      <div class="card h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bi bi-code-square"></i>
            Prompt
          </h5>
          <div>
            <span class="badge bg-secondary me-2" id="template-engine-badge" data-playground-target="engineBadge">Auto-detect</span>
            <span class="badge bg-info" id="char-count" data-playground-target="charCount">0 chars</span>
          </div>
        </div>
        <div class="card-body">
          <!-- System Prompt (optional) -->
          <div class="mb-3">
            <label for="system-prompt-editor" class="form-label">
              System Prompt
              <span class="badge bg-secondary">Optional</span>
            </label>
            <textarea
              id="system-prompt-editor"
              class="form-control font-monospace"
              rows="4"
              placeholder="Set the AI's role, behavior, and constraints...&#10;&#10;Example: You are a helpful customer support agent. Be professional, empathetic, and concise."
              data-playground-target="systemPromptEditor"
              data-action="input->playground#onSystemPromptInput"
            ><%= @version&.system_prompt %></textarea>
            <div class="form-text">
              Defines the AI's role and behavior. This is sent to the LLM as the system message.
            </div>
          </div>

          <!-- User Prompt Template (required) -->
          <div class="mb-3">
            <label for="user-prompt-editor" class="form-label">
              User Prompt Template
              <span class="badge bg-danger">Required</span>
            </label>
            <textarea
              id="user-prompt-editor"
              class="form-control font-monospace"
              rows="10"
              placeholder="Enter your user prompt template here...&#10;&#10;Examples:&#10;  Variable: Hello {{ name }}!&#10;  Filter: Hello {{ name | capitalize }}!&#10;  Conditional: {% if premium %}Premium user{% endif %}"
              data-playground-target="userPromptEditor"
              data-action="input->playground#onUserPromptInput"
            ><%= @version&.user_prompt %></textarea>
            <div class="form-text">
              Use Liquid syntax: <code>{{ variable }}</code> for substitution, filters, conditionals, and loops.
            </div>
          </div>

          <!-- Liquid syntax help -->
          <div class="accordion" id="syntaxHelp">
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#liquidHelp">
                  <i class="bi bi-question-circle me-2"></i>
                  Liquid Syntax Help
                </button>
              </h2>
              <div id="liquidHelp" class="accordion-collapse collapse" data-bs-parent="#syntaxHelp">
                <div class="accordion-body">
                  <h6>Filters</h6>
                  <code>{{ name | upcase }}</code> - Convert to uppercase<br>
                  <code>{{ name | downcase }}</code> - Convert to lowercase<br>
                  <code>{{ name | capitalize }}</code> - Capitalize first letter<br>
                  <code>{{ text | truncate: 100 }}</code> - Truncate to 100 chars<br>

                  <h6 class="mt-3">Conditionals</h6>
                  <code>{% if premium %}Premium{% else %}Basic{% endif %}</code><br>

                  <h6 class="mt-3">Loops</h6>
                  <code>{% for item in items %}{{ item }}{% endfor %}</code><br>

                  <a href="https://shopify.github.io/liquid/" target="_blank" class="btn btn-sm btn-outline-primary mt-2">
                    Full Liquid Documentation
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right pane: Variables and preview -->
    <div class="col-lg-6 mb-4">
      <!-- Variables section -->
      <div class="card mb-3">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-input-cursor-text"></i>
            Variables
          </h5>
        </div>
        <div class="card-body">
          <div id="variables-container" data-playground-target="variablesContainer">
            <% if @sample_variables.any? %>
              <% @sample_variables.each do |name, value| %>
                <div class="mb-2">
                  <label for="var-<%= name %>" class="form-label"><code><%= name %></code></label>
                  <input
                    type="text"
                    class="form-control variable-input"
                    id="var-<%= name %>"
                    data-variable-name="<%= name %>"
                    value="<%= value %>"
                    placeholder="Enter value for <%= name %>"
                    data-action="input->playground#onVariableInput"
                  >
                </div>
              <% end %>
            <% else %>
              <p class="text-muted">No variables detected. Start typing in the template editor.</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Model Configuration section -->
      <%= render "prompt_tracker/testing/playground/model_config_form" %>

      <!-- Preview section -->
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bi bi-eye"></i>
            Live Preview
            <span id="preview-status" class="badge bg-secondary ms-2" style="display: none;" data-playground-target="previewStatus">
              <span class="spinner-border spinner-border-sm me-1" role="status"></span>
              Updating...
            </span>
          </h5>
          <button id="refresh-preview-btn"
                  class="btn btn-sm btn-outline-primary"
                  data-playground-target="refreshBtn"
                  data-action="click->playground#refreshPreview">
            <i class="bi bi-arrow-clockwise"></i>
            Refresh
          </button>
        </div>
        <div class="card-body">
          <div id="preview-container"
               class="border rounded p-3 bg-light"
               style="min-height: 200px; white-space: pre-wrap; font-family: inherit;"
               data-playground-target="previewContainer">
            <p class="text-muted">Preview will appear here...</p>
          </div>
          <div id="preview-error"
               class="alert alert-danger mt-3"
               style="display: none;"
               data-playground-target="previewError"></div>
          <div class="mt-2">
            <small class="text-muted">
              <i class="bi bi-info-circle"></i>
              Preview updates automatically as you type (500ms delay)
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="row mt-3">
    <div class="col">
      <% unless @prompt %>
        <!-- Prompt name input for standalone mode -->
        <div class="mb-3" style="max-width: 400px;">
          <label for="prompt-name-input" class="form-label">Prompt Name</label>
          <input
            type="text"
            class="form-control"
            id="prompt-name-input"
            placeholder="Enter a name for this prompt"
            required
            data-playground-target="promptNameInput"
          >
          <div class="form-text">Required when creating a new prompt</div>
        </div>
      <% end %>

      <% if @prompt %>
        <% if @version && !@version.has_responses? %>
          <!-- Dropdown button for versions without responses -->
          <div class="btn-group" role="group">
            <button id="save-update-btn"
                    type="button"
                    class="btn btn-primary"
                    data-playground-target="saveUpdateBtn"
                    data-action="click->playground#saveDraft"
                    data-playground-action-param="update">
              <i class="bi bi-save"></i> Update This Version
            </button>
            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
              <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <button id="save-new-version-btn"
                        class="dropdown-item"
                        type="button"
                        data-playground-target="saveNewVersionBtn"
                        data-action="click->playground#saveDraft"
                        data-playground-action-param="new_version">
                  <i class="bi bi-plus-circle"></i> Save as New Version
                </button>
              </li>
            </ul>
          </div>
        <% else %>
          <!-- Single button for versions with responses or no version -->
          <button id="save-draft-btn"
                  class="btn btn-primary"
                  data-playground-target="saveDraftBtn"
                  data-action="click->playground#saveDraft"
                  data-playground-action-param="new_version">
            <i class="bi bi-save"></i> Save as Draft Version
          </button>
        <% end %>
      <% else %>
        <!-- Standalone mode -->
        <button id="save-draft-btn"
                class="btn btn-primary"
                data-playground-target="saveDraftBtn"
                data-action="click->playground#saveDraft"
                data-playground-action-param="new_version">
          <i class="bi bi-save"></i> Create Prompt
        </button>
        <a href="<%= testing_root_path %>" class="btn btn-outline-secondary">
          <i class="bi bi-x-circle"></i>
          Cancel
        </a>
      <% end %>
    </div>
  </div>
</div>
<!-- End of main container -->

<!-- Modals (outside container to avoid z-index issues) -->
<div data-controller="modal-fix">
  <%= render "prompt_tracker/testing/playground/keyboard_shortcuts_modal" %>
  <%= render "prompt_tracker/testing/playground/template_examples_modal" %>
</div>
