<% content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Prompts", prompts_path %></li>
      <li class="breadcrumb-item"><%= link_to "Analytics", analytics_root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Cost Analysis</li>
    </ol>
  </nav>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="bi bi-currency-dollar"></i> Cost Analysis</h1>
    <p class="text-muted">Detailed breakdown of LLM costs across providers, models, and prompts</p>
  </div>
  <%= link_to analytics_root_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to Dashboard
  <% end %>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-primary">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-currency-dollar"></i> Total Cost</h6>
        <h2 class="mb-0"><%= format_cost(@total_cost) %></h2>
        <small class="text-muted">All time</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-success">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-calendar-month"></i> Last 30 Days</h6>
        <h2 class="mb-0"><%= format_cost(@cost_last_30_days) %></h2>
        <small class="text-muted">
          <% if @cost_previous_30_days > 0 %>
            <% change = ((@cost_last_30_days - @cost_previous_30_days) / @cost_previous_30_days * 100).round(1) %>
            <% if change > 0 %>
              <span class="text-danger"><i class="bi bi-arrow-up"></i> <%= change %>%</span>
            <% elsif change < 0 %>
              <span class="text-success"><i class="bi bi-arrow-down"></i> <%= change.abs %>%</span>
            <% else %>
              <span class="text-muted">No change</span>
            <% end %>
          <% end %>
        </small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-warning">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-graph-up"></i> Avg per Call</h6>
        <h2 class="mb-0"><%= format_cost(@avg_cost_per_call) %></h2>
        <small class="text-muted">Across all providers</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-info">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-calendar-day"></i> Today</h6>
        <h2 class="mb-0"><%= format_cost(@cost_today) %></h2>
        <small class="text-muted">
          Projected monthly: <%= format_cost(@cost_today * 30) %>
        </small>
      </div>
    </div>
  </div>
</div>

<!-- Cost Over Time Chart -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Cost Trend (Last 30 Days)</h5>
  </div>
  <div class="card-body">
    <% if @cost_by_day.any? %>
      <canvas id="costTrendChart" height="80"></canvas>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const ctx = document.getElementById('costTrendChart').getContext('2d');
          const data = <%= raw @cost_by_day.sort.to_h.to_json %>;

          new Chart(ctx, {
            type: 'bar',
            data: {
              labels: Object.keys(data),
              datasets: [{
                label: 'Daily Cost (USD)',
                data: Object.values(data),
                backgroundColor: 'rgba(255, 193, 7, 0.6)',
                borderColor: 'rgba(255, 193, 7, 1)',
                borderWidth: 1
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: { display: false }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  ticks: {
                    callback: function(value) {
                      return '$' + value.toFixed(2);
                    }
                  }
                }
              }
            }
          });
        });
      </script>
    <% else %>
      <div class="text-center text-muted py-4">
        <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
        <p class="mt-3">No cost data for the last 30 days</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Cost Breakdown -->
<div class="row mb-4">
  <!-- By Provider -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Cost by Provider</h5>
      </div>
      <div class="card-body">
        <% if @cost_by_provider.any? %>
          <div class="table-responsive mb-3">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Provider</th>
                  <th class="text-end">Cost</th>
                  <th class="text-end">Calls</th>
                  <th class="text-end">Avg/Call</th>
                  <th class="text-end">%</th>
                </tr>
              </thead>
              <tbody>
                <% total_cost = @cost_by_provider.values.sum %>
                <% @cost_by_provider.sort_by { |_, cost| -cost }.each do |provider, cost| %>
                  <% calls = @responses_by_provider[provider] || 0 %>
                  <tr>
                    <td><%= provider_icon(provider) %> <%= provider %></td>
                    <td class="text-end"><%= format_cost(cost) %></td>
                    <td class="text-end"><%= calls %></td>
                    <td class="text-end"><%= format_cost(calls > 0 ? cost / calls : 0) %></td>
                    <td class="text-end"><%= ((cost / total_cost * 100).round(1)) %>%</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <canvas id="providerCostChart" height="200"></canvas>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const ctx = document.getElementById('providerCostChart').getContext('2d');
              const data = <%= raw @cost_by_provider.to_json %>;

              new Chart(ctx, {
                type: 'doughnut',
                data: {
                  labels: Object.keys(data),
                  datasets: [{
                    data: Object.values(data),
                    backgroundColor: [
                      'rgba(255, 99, 132, 0.8)',
                      'rgba(54, 162, 235, 0.8)',
                      'rgba(255, 206, 86, 0.8)',
                      'rgba(75, 192, 192, 0.8)',
                      'rgba(153, 102, 255, 0.8)'
                    ]
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                      callbacks: {
                        label: function(context) {
                          return context.label + ': $' + context.parsed.toFixed(2);
                        }
                      }
                    }
                  }
                }
              });
            });
          </script>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No provider cost data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- By Model -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-cpu"></i> Cost by Model</h5>
      </div>
      <div class="card-body">
        <% if @cost_by_model.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Model</th>
                  <th class="text-end">Cost</th>
                  <th class="text-end">Calls</th>
                  <th class="text-end">Avg/Call</th>
                </tr>
              </thead>
              <tbody>
                <% @cost_by_model.sort_by { |_, cost| -cost }.first(10).each do |model, cost| %>
                  <% calls = @responses_by_model[model] || 0 %>
                  <tr>
                    <td><code><%= truncate(model, length: 30) %></code></td>
                    <td class="text-end"><%= format_cost(cost) %></td>
                    <td class="text-end"><%= calls %></td>
                    <td class="text-end"><%= format_cost(calls > 0 ? cost / calls : 0) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @cost_by_model.count > 10 %>
            <small class="text-muted">Showing top 10 of <%= @cost_by_model.count %> models</small>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No model cost data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Top Prompts by Cost -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-trophy"></i> Most Expensive Prompts</h5>
  </div>
  <div class="card-body">
    <% if @top_prompts_by_cost.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Prompt</th>
              <th>Category</th>
              <th class="text-end">Total Cost</th>
              <th class="text-end">Calls</th>
              <th class="text-end">Avg Cost/Call</th>
              <th class="text-end">Last 30 Days</th>
            </tr>
          </thead>
          <tbody>
            <% @top_prompts_by_cost.each do |prompt, cost| %>
              <% calls = prompt.llm_responses.count %>
              <% cost_30_days = prompt.llm_responses.where("prompt_tracker_llm_responses.created_at >= ?", 30.days.ago).sum(:cost_usd) %>
              <tr>
                <td><%= link_to prompt.name, prompt_path(prompt) %></td>
                <td><span class="badge bg-secondary"><%= prompt.category %></span></td>
                <td class="text-end"><strong><%= format_cost(cost) %></strong></td>
                <td class="text-end"><%= format_tokens(calls) %></td>
                <td class="text-end"><%= format_cost(calls > 0 ? cost / calls : 0) %></td>
                <td class="text-end"><%= format_cost(cost_30_days) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center text-muted py-4">
        <i class="bi bi-trophy" style="font-size: 3rem;"></i>
        <p class="mt-3">No cost data available</p>
      </div>
    <% end %>
  </div>
</div>
