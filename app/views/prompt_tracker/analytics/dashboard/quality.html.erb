<% content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Prompts", prompts_path %></li>
      <li class="breadcrumb-item"><%= link_to "Analytics", analytics_root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Quality Analysis</li>
    </ol>
  </nav>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="bi bi-star"></i> Quality Analysis</h1>
    <p class="text-muted">Evaluation scores and quality metrics across prompts and versions</p>
  </div>
  <%= link_to analytics_root_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to Dashboard
  <% end %>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-primary">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-star"></i> Avg Quality Score</h6>
        <h2 class="mb-0"><%= @avg_quality_score.round(1) %>%</h2>
        <small class="text-muted">Across all evaluations</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-success">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-clipboard-check"></i> Total Evaluations</h6>
        <h2 class="mb-0"><%= format_tokens(@total_evaluations) %></h2>
        <small class="text-muted">
          <%= @evaluations_last_30_days %> in last 30 days
        </small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-warning">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-percent"></i> Evaluation Rate</h6>
        <h2 class="mb-0"><%= @evaluation_rate.round(1) %>%</h2>
        <small class="text-muted">
          <%= @total_evaluations %> of <%= @total_responses %> responses
        </small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-info">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-trophy"></i> High Quality</h6>
        <h2 class="mb-0"><%= @high_quality_count %></h2>
        <small class="text-muted">
          Scores â‰¥ 80% (<%= ((@high_quality_count.to_f / @total_evaluations * 100).round(1) rescue 0) %>%)
        </small>
      </div>
    </div>
  </div>
</div>

<!-- Quality Score Trend -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Quality Score Trend (Last 30 Days)</h5>
  </div>
  <div class="card-body">
    <% if @quality_by_day.any? %>
      <canvas id="qualityTrendChart" height="80"></canvas>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const ctx = document.getElementById('qualityTrendChart').getContext('2d');
          const data = <%= raw @quality_by_day.sort.to_h.to_json %>;
          
          new Chart(ctx, {
            type: 'line',
            data: {
              labels: Object.keys(data),
              datasets: [{
                label: 'Avg Quality Score (%)',
                data: Object.values(data),
                borderColor: 'rgb(255, 193, 7)',
                backgroundColor: 'rgba(255, 193, 7, 0.1)',
                tension: 0.1,
                fill: true
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: { display: false }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  max: 100,
                  ticks: {
                    callback: function(value) {
                      return value + '%';
                    }
                  }
                }
              }
            }
          });
        });
      </script>
    <% else %>
      <div class="text-center text-muted py-4">
        <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
        <p class="mt-3">No quality data for the last 30 days</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Evaluation Types and Score Distribution -->
<div class="row mb-4">
  <!-- Evaluation Types -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Evaluation Types</h5>
      </div>
      <div class="card-body">
        <% if @evaluations_by_type.any? %>
          <div class="table-responsive mb-3">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Type</th>
                  <th class="text-end">Count</th>
                  <th class="text-end">Avg Score</th>
                  <th class="text-end">%</th>
                </tr>
              </thead>
              <tbody>
                <% total_evals = @evaluations_by_type.values.sum %>
                <% @evaluations_by_type.sort_by { |_, count| -count }.each do |type, count| %>
                  <% avg_score = @avg_score_by_type[type] || 0 %>
                  <tr>
                    <td><span class="badge bg-secondary"><%= type %></span></td>
                    <td class="text-end"><%= count %></td>
                    <td class="text-end"><%= score_badge(avg_score) %></td>
                    <td class="text-end"><%= ((count.to_f / total_evals * 100).round(1)) %>%</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <canvas id="evaluationTypeChart" height="200"></canvas>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const ctx = document.getElementById('evaluationTypeChart').getContext('2d');
              const data = <%= raw @evaluations_by_type.to_json %>;
              
              new Chart(ctx, {
                type: 'doughnut',
                data: {
                  labels: Object.keys(data),
                  datasets: [{
                    data: Object.values(data),
                    backgroundColor: [
                      'rgba(255, 99, 132, 0.8)',
                      'rgba(54, 162, 235, 0.8)',
                      'rgba(255, 206, 86, 0.8)',
                      'rgba(75, 192, 192, 0.8)',
                      'rgba(153, 102, 255, 0.8)'
                    ]
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: { position: 'bottom' }
                  }
                }
              });
            });
          </script>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No evaluation type data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Score Distribution -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Score Distribution</h5>
      </div>
      <div class="card-body">
        <% if @score_distribution.any? %>
          <canvas id="scoreDistributionChart" height="280"></canvas>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const ctx = document.getElementById('scoreDistributionChart').getContext('2d');
              const data = <%= raw @score_distribution.to_json %>;
              
              new Chart(ctx, {
                type: 'bar',
                data: {
                  labels: Object.keys(data),
                  datasets: [{
                    label: 'Number of Evaluations',
                    data: Object.values(data),
                    backgroundColor: [
                      'rgba(220, 53, 69, 0.6)',   // 0-20: red
                      'rgba(255, 193, 7, 0.6)',   // 20-40: yellow
                      'rgba(255, 193, 7, 0.6)',   // 40-60: yellow
                      'rgba(13, 202, 240, 0.6)',  // 60-80: cyan
                      'rgba(25, 135, 84, 0.6)'    // 80-100: green
                    ],
                    borderColor: [
                      'rgba(220, 53, 69, 1)',
                      'rgba(255, 193, 7, 1)',
                      'rgba(255, 193, 7, 1)',
                      'rgba(13, 202, 240, 1)',
                      'rgba(25, 135, 84, 1)'
                    ],
                    borderWidth: 1
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: { display: false }
                  },
                  scales: {
                    y: { beginAtZero: true }
                  }
                }
              });
            });
          </script>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No score distribution data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Top and Bottom Prompts by Quality -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-trophy-fill text-success"></i> Highest Quality Prompts</h5>
      </div>
      <div class="card-body">
        <% if @top_prompts_by_quality.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Prompt</th>
                  <th class="text-end">Avg Score</th>
                  <th class="text-end">Evaluations</th>
                </tr>
              </thead>
              <tbody>
                <% @top_prompts_by_quality.each do |data| %>
                  <% prompt = data[:prompt] %>
                  <% avg_score = data[:avg_score] %>
                  <% eval_count = prompt.evaluations.count %>
                  <tr>
                    <td><%= link_to prompt.name, prompt_path(prompt) %></td>
                    <td class="text-end"><strong><%= score_badge(avg_score) %></strong></td>
                    <td class="text-end"><%= eval_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No quality data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill text-warning"></i> Needs Improvement</h5>
      </div>
      <div class="card-body">
        <% if @bottom_prompts_by_quality.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Prompt</th>
                  <th class="text-end">Avg Score</th>
                  <th class="text-end">Evaluations</th>
                </tr>
              </thead>
              <tbody>
                <% @bottom_prompts_by_quality.each do |data| %>
                  <% prompt = data[:prompt] %>
                  <% avg_score = data[:avg_score] %>
                  <% eval_count = prompt.evaluations.count %>
                  <tr>
                    <td><%= link_to prompt.name, prompt_path(prompt) %></td>
                    <td class="text-end"><strong><%= score_badge(avg_score) %></strong></td>
                    <td class="text-end"><%= eval_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No quality data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

