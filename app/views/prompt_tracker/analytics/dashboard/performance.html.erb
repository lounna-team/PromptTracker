<% content_for :breadcrumbs do %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Prompts", prompts_path %></li>
      <li class="breadcrumb-item"><%= link_to "Analytics", analytics_root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Performance Analysis</li>
    </ol>
  </nav>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1><i class="bi bi-speedometer"></i> Performance Analysis</h1>
    <p class="text-muted">Response time metrics and performance trends across providers and models</p>
  </div>
  <%= link_to analytics_root_path, class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left"></i> Back to Dashboard
  <% end %>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card border-primary">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-clock"></i> Avg Response Time</h6>
        <h2 class="mb-0"><%= format_duration(@avg_response_time) %></h2>
        <small class="text-muted">All providers</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-success">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-lightning"></i> Fastest</h6>
        <h2 class="mb-0"><%= format_duration(@min_response_time) %></h2>
        <small class="text-muted">Minimum time</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-warning">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-hourglass"></i> Slowest</h6>
        <h2 class="mb-0"><%= format_duration(@max_response_time) %></h2>
        <small class="text-muted">Maximum time</small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-info">
      <div class="card-body">
        <h6 class="text-muted mb-2"><i class="bi bi-graph-up"></i> P95</h6>
        <h2 class="mb-0"><%= format_duration(@p95_response_time) %></h2>
        <small class="text-muted">95th percentile</small>
      </div>
    </div>
  </div>
</div>

<!-- Response Time Trend -->
<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Response Time Trend (Last 30 Days)</h5>
  </div>
  <div class="card-body">
    <% if @response_time_by_day.any? %>
      <canvas id="responseTrendChart" height="80"></canvas>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const ctx = document.getElementById('responseTrendChart').getContext('2d');
          const data = <%= raw @response_time_by_day.sort.to_h.to_json %>;
          
          new Chart(ctx, {
            type: 'line',
            data: {
              labels: Object.keys(data),
              datasets: [{
                label: 'Avg Response Time (ms)',
                data: Object.values(data),
                borderColor: 'rgb(54, 162, 235)',
                backgroundColor: 'rgba(54, 162, 235, 0.1)',
                tension: 0.1,
                fill: true
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: { display: false }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  ticks: {
                    callback: function(value) {
                      return value + ' ms';
                    }
                  }
                }
              }
            }
          });
        });
      </script>
    <% else %>
      <div class="text-center text-muted py-4">
        <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
        <p class="mt-3">No performance data for the last 30 days</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Performance by Provider and Model -->
<div class="row mb-4">
  <!-- By Provider -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Performance by Provider</h5>
      </div>
      <div class="card-body">
        <% if @response_time_by_provider.any? %>
          <div class="table-responsive mb-3">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Provider</th>
                  <th class="text-end">Avg Time</th>
                  <th class="text-end">Calls</th>
                  <th class="text-end">Success Rate</th>
                </tr>
              </thead>
              <tbody>
                <% @response_time_by_provider.sort_by { |_, time| time }.each do |provider, avg_time| %>
                  <% calls = @responses_by_provider[provider] || 0 %>
                  <% success_rate = @success_rate_by_provider[provider] || 0 %>
                  <tr>
                    <td><%= provider_icon(provider) %> <%= provider %></td>
                    <td class="text-end"><%= format_duration(avg_time) %></td>
                    <td class="text-end"><%= calls %></td>
                    <td class="text-end">
                      <span class="badge <%= success_rate >= 95 ? 'bg-success' : success_rate >= 90 ? 'bg-warning' : 'bg-danger' %>">
                        <%= success_rate.round(1) %>%
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <canvas id="providerPerformanceChart" height="200"></canvas>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const ctx = document.getElementById('providerPerformanceChart').getContext('2d');
              const data = <%= raw @response_time_by_provider.to_json %>;
              
              new Chart(ctx, {
                type: 'bar',
                data: {
                  labels: Object.keys(data),
                  datasets: [{
                    label: 'Avg Response Time (ms)',
                    data: Object.values(data),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: { display: false }
                  },
                  scales: {
                    y: {
                      beginAtZero: true,
                      ticks: {
                        callback: function(value) {
                          return value + ' ms';
                        }
                      }
                    }
                  }
                }
              });
            });
          </script>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No provider performance data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- By Model -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-cpu"></i> Performance by Model</h5>
      </div>
      <div class="card-body">
        <% if @response_time_by_model.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Model</th>
                  <th class="text-end">Avg Time</th>
                  <th class="text-end">Calls</th>
                </tr>
              </thead>
              <tbody>
                <% @response_time_by_model.sort_by { |_, time| time }.first(10).each do |model, avg_time| %>
                  <% calls = @responses_by_model[model] || 0 %>
                  <tr>
                    <td><code><%= truncate(model, length: 30) %></code></td>
                    <td class="text-end"><%= format_duration(avg_time) %></td>
                    <td class="text-end"><%= calls %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <% if @response_time_by_model.count > 10 %>
            <small class="text-muted">Showing top 10 fastest of <%= @response_time_by_model.count %> models</small>
          <% end %>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No model performance data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Fastest and Slowest Prompts -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-lightning-fill text-success"></i> Fastest Prompts</h5>
      </div>
      <div class="card-body">
        <% if @fastest_prompts.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Prompt</th>
                  <th class="text-end">Avg Time</th>
                  <th class="text-end">Calls</th>
                </tr>
              </thead>
              <tbody>
                <% @fastest_prompts.each do |prompt, avg_time| %>
                  <% calls = prompt.llm_responses.count %>
                  <tr>
                    <td><%= link_to prompt.name, prompt_path(prompt) %></td>
                    <td class="text-end"><strong><%= format_duration(avg_time) %></strong></td>
                    <td class="text-end"><%= calls %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-hourglass-split text-warning"></i> Slowest Prompts</h5>
      </div>
      <div class="card-body">
        <% if @slowest_prompts.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Prompt</th>
                  <th class="text-end">Avg Time</th>
                  <th class="text-end">Calls</th>
                </tr>
              </thead>
              <tbody>
                <% @slowest_prompts.each do |prompt, avg_time| %>
                  <% calls = prompt.llm_responses.count %>
                  <tr>
                    <td><%= link_to prompt.name, prompt_path(prompt) %></td>
                    <td class="text-end"><strong><%= format_duration(avg_time) %></strong></td>
                    <td class="text-end"><%= calls %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <p>No data available</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

