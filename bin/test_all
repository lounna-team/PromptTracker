test_all
#!/usr/bin/env bash
# Run both Minitest and RSpec test suites

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track failures
MINITEST_FAILED=0
RSPEC_FAILED=0

echo ""
echo "================================================================================"
echo -e "${BLUE}üß™ Running Minitest Suite${NC}"
echo "================================================================================"
echo ""

if bundle exec rails test; then
  echo -e "${GREEN}‚úÖ Minitest: PASSED${NC}"
else
  MINITEST_FAILED=1
  echo -e "${RED}‚ùå Minitest: FAILED${NC}"
fi

echo ""
echo "================================================================================"
echo -e "${BLUE}üî¨ Running RSpec Suite${NC}"
echo "================================================================================"
echo ""

if bundle exec rspec; then
  echo -e "${GREEN}‚úÖ RSpec: PASSED${NC}"
else
  RSPEC_FAILED=1
  echo -e "${RED}‚ùå RSpec: FAILED${NC}"
fi

echo ""
echo "================================================================================"
echo -e "${YELLOW}üìä Test Summary${NC}"
echo "================================================================================"

if [ $MINITEST_FAILED -eq 0 ]; then
  echo -e "Minitest: ${GREEN}‚úÖ PASSED${NC}"
else
  echo -e "Minitest: ${RED}‚ùå FAILED${NC}"
fi

if [ $RSPEC_FAILED -eq 0 ]; then
  echo -e "RSpec:    ${GREEN}‚úÖ PASSED${NC}"
else
  echo -e "RSpec:    ${RED}‚ùå FAILED${NC}"
fi

echo "================================================================================"

# Exit with error if any suite failed
if [ $MINITEST_FAILED -eq 1 ] || [ $RSPEC_FAILED -eq 1 ]; then
  echo -e "${RED}‚ùå Some tests failed!${NC}"
  echo ""
  exit 1
else
  echo -e "${GREEN}‚úÖ All tests passed!${NC}"
  echo ""
  exit 0
fi

